<p id="notice"><%= notice %></p>

<h1>Tipo Objetivos</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_objetivos.each do |tipo_objetivo| %>
      <tr>
        <td><%= tipo_objetivo.descripcion %></td>
        <% @Resultado = Estado.where(id:tipo_objetivo.estado)
        @Resultado.each do |row| %>
        <td><%= row.descripcion %></td>
         <%end %>        
        <td><%= link_to 'Mostrar', tipo_objetivo %></td>
        <td><%= link_to 'Editar', edit_tipo_objetivo_path(tipo_objetivo) %></td>
        <td><%= link_to 'Eliminar', tipo_objetivo, method: :delete, data: { confirm: 'Estas seguro que desea eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Tipo Objetivo', new_tipo_objetivo_path %>
